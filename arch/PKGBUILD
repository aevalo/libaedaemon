# Maintainer: Arttu Valo <arttu.valo@gmail.com>
pkgname=libaedaemon
pkgver=0.0.1
pkgrel=2
pkgdesc="LibAeDaemon"
url="https://github.com/aevalo/libaedaemon"
arch=("i686")
license=("LGPLv3")
depends=("apr" "apr-util")
optdepends=()
makedepends=("cmake" "apr" "apr-util")
conflicts=()
replaces=()
backup=()
install="libaedaemon.install"
changelog="ChangeLog"
source=("https://github.com/downloads/aevalo/libaedaemon/${pkgname}-${pkgver}.tar.gz")
sha256sums=("7d91cae9426d4101cad8df208af6c0fa8d00659af0de67d339aa0d5b606af8c7")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  if [ -f build ];
  then
    rm -rf build
  fi
  mkdir build
  cd build
  cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr/local -DLIBAEDAEMON_LINUX_DISTRIBUTION=ArchLinux ..
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/build"
  make DESTDIR="${pkgdir}" install
  #install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

# vim:set ts=2 sw=2 et:
