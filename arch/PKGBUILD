# Maintainer: Arttu Valo <arttu.valo@gmail.com>
pkgname=libaedaemon
pkgver=0.0.1
pkgrel=2
pkgdesc="libaedaemon."
url="https://github.com/aevalo/libaedaemon"
arch=('i686')
license=('LGPLv3')
depends=('apr' 'apr-util')
optdepends=()
makedepends=('apr' 'apr-util')
conflicts=()
replaces=()
backup=()
install='libaedaemon.install'
source=("http://www.server.tld/${pkgname}-${pkgver}.tar.gz"
        "foo.desktop")
md5sums=('a0afa52d60cea6c0363a2a8cb39a4095'
         'a0afa52d60cea6c0363a2a8cb39a4095')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  cmake ./ -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  #install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

