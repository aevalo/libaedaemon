# Maintainer: Arttu Valo <arttu.valo@gmail.com>
pkgname=libaedaemon
pkgver=0.0.1
pkgrel=2
pkgdesc="libaedaemon."
url="https://github.com/aevalo/libaedaemon"
arch=('i686')
license=('LGPLv3')
depends=('apr' 'apr-util')
optdepends=()
makedepends=('apr' 'apr-util')
conflicts=()
replaces=()
backup=()
install='libaedaemon.install'
source=("https://github.com/aevalo/${pkgname}/tarball/v${pkgver}")
sha256sums=('72287882e5103ca017dc433f09d5255ca67c74427130760ee7421b3309ed40df')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  cmake ./ -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  #install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

